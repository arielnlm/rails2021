<p id="notice"><%= notice %></p>

<h1 class="current-category"> <%= params[:category] %> Books </h1>
<% if @books.count == 0 %>
  <h1>There are no books in this category</h1>

<% else %>
  <table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Category</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.name, book %></td>
        <td><%= book.author.name %> <%= book.author.lastname %></td>
        <td><%= book.category.name %></td>
        <% if is_admin? %>
          <td><%= link_to 'Show', book %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>

<br>
<% if is_admin? %>
<%= link_to 'New Book', new_book_path %>

<% end %>
