
<%= simple_form_for(@purchase) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
  
    <% if params[:user_id].present? %>
      <%= f.input :user_id, input_html: {value: params[:user_id], id: 'user_id'} %>
    <% else %>
      <%= f.input :user_id %>
    <% end %>
    
    <% if params[:book_id].present? %>
      <%= f.input :book_id,  input_html: {value: params[:book_id], id: 'book_id'}%>
    <% else %>
      <%= f.input :book_id%>
    <% end %>
    
    <% if params[:bookstore_id].present? %>
      <%= f.input :bookstore_id,  input_html: {value: params[:bookstore_id], id: 'bookstore_id'} %>
    <% else %>
      <%= f.input :bookstore_id %>
    <% end %>
    
    <% if params[:price].present? %>
      <%= f.input :price,  input_html: {value: params[:price], id: 'price'} %>
    <% else %>
      <%= f.input :price %>
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
